<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">




    <ImageView
        android:id="@+id/guest_image"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:src="@drawable/camp1"/>

    <LinearLayout
        android:layout_width="125dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고객 이름"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gusetNum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원 수"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입실 날짜"
            android:textColor="#0026FB"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="퇴실 날짜"
            android:textColor="#FF0000"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/guestName_text"
            tools:text="고객 이름"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/numOfGuest_text"
            tools:text="인원 수"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/startDate_text"
            tools:text="입실 날짜"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/endDate_text"
            tools:text="퇴실 날짜"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"/>

    </LinearLayout>

</LinearLayout>